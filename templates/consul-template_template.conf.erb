template {
  source = "<%= @cache_dir %>/<%= @cooked_name %>"
  destination = "<%= @name %>"
<%- if @command -%>
  command = "<%= @command %>"
<%-   if @command_timeout -%>
  command_timeout = "<%= @command_timeout %>"
<%-   end -%>
<%- end -%>
  perms = <%= @mode %>
<%- if @min_wait -%>
  wait {
    min = "<%= @min_wait %>"
<%-   if @max_wait -%>
    max = "<%= @max_wait %>"
<%-   end -%>
  }
<%- end -%>
}
