## managed by Puppet ##
[Unit]
Description=<%= @name %> agent
Wants=basic.target
After=basic.target network.target

[Service]
Type=simple
ExecStart=<%= @install_dir %>/<%= @name %> agent -config-dir=<%= @config_dir %>
ExecReload=/bin/kill -HUP $MAINPID
KillSignal=SIGINT
Restart=always
RestartSec=42s

[Install]
WantedBy=multi-user.target
